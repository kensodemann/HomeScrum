@model HomeScrum.Spa.Models.Admin.LoginModel

@using (Html.BeginForm( "Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "loginForm", @class="form-signin" } ))
{
   @Html.AntiForgeryToken()
   @Html.ValidationSummary( true )

   <fieldset>
      <div>
         @Html.LabelFor( m => m.UserName )
         <span>@Html.TextBoxFor( m => m.UserName, new { @class = "form-control" } )</span>
         @Html.ValidationMessageFor( m => m.UserName )
      </div>
      <div>
         @Html.LabelFor( m => m.Password )
         <span>@Html.PasswordFor( m => m.Password, new { @class = "form-control" } )</span>
         @Html.ValidationMessageFor( m => m.Password )
      </div>
   </fieldset>
   <input type="submit" value="Log in" class="btn btn-lg btn-primary" />
}
