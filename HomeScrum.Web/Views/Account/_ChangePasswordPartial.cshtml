@model HomeScrum.Web.Models.Admin.LocalPasswordModel

<h3>Change password</h3>

<div id="ChangePasswordEditor">
   @using (Html.BeginForm( "Manage", "Account" ))
   {
      @Html.AntiForgeryToken()
      @Html.ValidationSummary()

      <fieldset>
         <legend>Change Password Form</legend>

         <div class="formSingleLineEdit">
            @Html.LabelFor( m => m.OldPassword )
            <span>@Html.PasswordFor( m => m.OldPassword )</span>
            @Html.ValidationMessageFor( m => m.OldPassword )
         </div>


         <div class="formSingleLineEdit">
            @Html.LabelFor( m => m.NewPassword )
            <span>@Html.PasswordFor( m => m.NewPassword )</span>
            @Html.ValidationMessageFor( m => m.NewPassword )
         </div>

         <div class="formSingleLineEdit">
            @Html.LabelFor( m => m.ConfirmPassword )
            <span>@Html.PasswordFor( m => m.ConfirmPassword )</span>
            @Html.ValidationMessageFor( m => m.ConfirmPassword )
         </div>


         <input type="submit" value="Change password" />
      </fieldset>
   }
</div>
