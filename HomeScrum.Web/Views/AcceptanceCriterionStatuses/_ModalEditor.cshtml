@model HomeScrum.Web.Models.Admin.AcceptanceCriterionStatusEditorViewModel

@using (Html.BeginForm( null, null, null, FormMethod.Post, new { id = "Editor", @class = "form-horizontal", role = "form" } ))
{
   <div class="modal-dialog">
      <div class="modal-content">
         <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">Acceptance Criterion Status</h4>
         </div>
         <div class="modal-body">
            @Html.Partial( "_Editor", Model )
         </div>

         <div class="modal-footer">
            @Html.Partial( "_ModalEditorButtonArea", Model )
         </div>
      </div>
   </div>
}

@Scripts.Render( "~/bundles/jqueryval" )