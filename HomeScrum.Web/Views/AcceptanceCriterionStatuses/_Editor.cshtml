@using HomeScrum.Web.Extensions

@model HomeScrum.Web.Models.Admin.AcceptanceCriterionStatusEditorViewModel

@using (Html.BeginForm( null, null, null, FormMethod.Post, new { id = "Editor", @class = "form-horizontal", role = "form" } ))
{
   @Html.ValidationSummary( true )

   @Html.Partial( "_SystemDomainObjectEditor", Model );

   <fieldset>
      <legend class="hidden">Properties</legend>

      <div class="form-group">
         @Html.LabelFor( model => model.Category, new { @class = "col-sm-2 control-label" } )
         <div class="col-sm-6">
            @Html.EnumDropDownListFor( model => model.Category, new { @class = "MainData form-control" } )
            @Html.ValidationMessageFor( model => model.Category )
         </div>
      </div>

      <div class="form-group">
         <div class="col-sm-offset-2 col-sm-6">
            @Html.CheckBoxFor( model => model.AllowUse, new { @class = "MainData" } )
            @Html.LabelFor( model => model.AllowUse )
            @Html.ValidationMessageFor( model => model.AllowUse )
         </div>
      </div>
   </fieldset>

   @Html.HiddenFor( model => model.Mode );
}


<a href="#" id="SubmitButton" class="btn btn-primary"></a>

@Scripts.Render( "~/Bundles/BaseScripts" )
<script>
   $(document).ready(function () {
      EditorBase.init();
   });
</script> 