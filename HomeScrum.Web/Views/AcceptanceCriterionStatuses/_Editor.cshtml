{
    @Html.ValidationSummary( true )

    @Html.Partial( "_SystemDomainObjectEditor", Model );

    <fieldset>
        <legend>Properties</legend>

        <div class="formBooleanOption">
            @Html.EditorFor( model => model.IsAccepted )
            @Html.LabelFor( model => model.IsAccepted )
