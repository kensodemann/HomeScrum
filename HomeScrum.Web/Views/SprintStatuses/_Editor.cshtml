         @Html.ValidationMessageFor( model => model.CanAddTaskListItems )
      </div>
   </div>

   <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
         @Html.CheckBoxFor( model => model.AllowUse, new { @class = "MainData" } )
         @Html.LabelFor( model => model.AllowUse )
         @Html.ValidationMessageFor( model => model.AllowUse )
      </div>
   </div>
</fieldset>