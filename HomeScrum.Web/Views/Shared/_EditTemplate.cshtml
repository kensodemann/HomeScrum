@model HomeScrum.Web.Models.Base.ViewModelBase


@{
   ViewBag.EditorButtonLabel = "Save";
}

<h2>@ViewBag.Title</h2>

@Html.Partial( "_Editor", Model )

<span>
   @Html.ActionLink( "Close", Model.CallingAction ?? "Index", Model.CallingController,
       (Model.CallingId != default( Guid )) ? new { id = Model.CallingId.ToString() } : null, new { id = "CloseButton" } )
</span>

@section Scripts {
   @Scripts.Render( "~/bundles/jqueryval" )
}

<script>
   $(document).ready(function () {
      $('#CloseButton').button();
   });
</script>