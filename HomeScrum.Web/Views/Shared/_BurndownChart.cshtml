@model HomeScrum.Web.Models.Sprints.IBurndownChart

@{
   var chartId = String.Format( "chartdiv{0}", Model.Id.ToString( "N" ) );
   var startDate = ((DateTime)Model.StartDate).ToString("yyyy-MM-dd");
   var endDate = ((DateTime)Model.EndDate).ToString("yyyy-MM-dd");
}

<div id="@chartId" style="height:400px;width:600px; "></div>

<script type="text/javascript" charset="utf-8">
   $(document).ready(function () {
      $.jqplot("@chartId",
         [[['2014-01-01', 100],  // Obtain from the sprint calendar
            ['2014-01-02', 100],
            ['2014-01-03', 97],
            ['2014-01-04', 89],
            ['2014-01-05', 83],
            ['2014-01-06', 75],
            ['2014-01-09', 63],
            ['2014-01-10', 64]]],
         {
            title: "@Model.Name",
            axesDefaults: {
               labelRenderer: $.jqplot.CanvasAxisLabelRenderer
            },
            axes: {
               xaxis: {
                  label: "Date",
                  renderer: $.jqplot.DateAxisRenderer,
                  pad: 0,
                  min: '@startDate',
                  max: '@endDate'
               },
               yaxis: {
                  label: "Points Remaining",
                  min: 0
               }
            }
         });
   });

</script>
