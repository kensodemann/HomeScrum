@using HomeScrum.Web.Extensions

<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="utf-8" />
   <title>HomeScrum - @ViewBag.Title</title>
   <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
   <meta name="viewport" content="width=device-width" />
   @Styles.Render( "~/Content/themes/jqueryDataTables/css" )
   @Styles.Render( "~/Content/css" )
   @Styles.Render( "~/Content/themes/base/css" )
   @Styles.Render( "~/jqPlotcss" )


   @Scripts.Render( "~/bundles/modernizr" )
   @Scripts.Render( "~/bundles/vendor" )
   @Scripts.Render( "~/bundles/jqueryDataTables" )
   @Scripts.Render( "~/bundles/jqueryDataTablesCust" )
   @Scripts.Render( "~/bundles/myScripts" )

   <script type="text/javascript" charset="utf-8">
      $(document).ready(function () {
         $(".dataTableList").dataTable();
      });
   </script>
</head>
<body>
   <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="navbar-header">
         <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
         </button>
         <a class="navbar-brand" href='@Url.Action("index", "home", null)'>
            <span class="glyphicon glyphicon-home"></span>
            <span>HomeScrum</span>
         </a>
      </div>

      <div class="collapse navbar-collapse">
         <ul class="nav navbar-nav">
            @Html.MenuItem( "My Assignments", "MyAssignments", "WorkItems" )
            @Html.MenuItem( "Current Sprints", "CurrentSprints", "Sprints" )
            <li class="dropdown">
               <a href="#" class="dropdown-toggle" data-toggle="dropdown">Work Items <b class="caret"></b></a>
               <ul class="dropdown-menu">
                  @Html.MenuItem( "Unassigned Problems", "UnassignedProblems", "WorkItems" )
                  @Html.MenuItem( "Unassigned Tasks", "UnassignedTasks", "WorkItems" )
                  @Html.MenuItem( "Unassigned Backlog", "UnassignedBacklog", "WorkItems" )
                  <li class="divider"></li>
                  @Html.MenuItem( "All Work Items", "Index", "WorkItems" )
               </ul>
            </li>
            <li class="dropdown">
               <a href="#" class="dropdown-toggle" data-toggle="dropdown">Sprints <b class="caret"></b></a>
               <ul class="dropdown-menu">
                  @Html.MenuItem( "Open Sprints", "OpenSprints", "Sprints" )
                  @Html.MenuItem( "All Sprints", "Index", "Sprints" )
               </ul>
            </li>
            <li class="dropdown">
               <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin <b class="caret"></b></a>
               <ul class="dropdown-menu">
                  @Html.MenuItem( "Acceptance Criterion Statuses", "Index", "AcceptanceCriterionStatuses" )
                  @Html.MenuItem( "Project Statuses", "Index", "ProjectStatuses" )
                  @Html.MenuItem( "Sprint Statuses", "Index", "SprintStatuses" )
                  @Html.MenuItem( "Work Item Statuses", "Index", "WorkItemStatuses" )
                  @Html.MenuItem( "Work Item Types", "Index", "WorkItemTypes" )
                  <li class="divider"></li>
                  @Html.MenuItem( "Projects", "Index", "Projects" )
                  <li class="divider"></li>
                  @Html.MenuItem( "Users", "Index", "Users" )
                  @Html.MenuItem( "Change Password", "Manage", "Account" )
               </ul>
            </li>
         </ul>

         @Html.Partial( "_LoginPartial" )
         <ul class="nav navbar-nav navbar-right">
            @Html.MenuItem( "About", "About", "Home" )
         </ul>


      </div>
   </nav>

   <div class="page-host">

      <section class="WorkArea">
         @RenderSection( "featured", required: false )
         <article class="container content-wrapper main-content clear-fix">
            @RenderBody()
         </article>
      </section>

      <footer>
         <div id="copyright">
            <p>&copy; @DateTime.Now.Year - Ken Sodemann</p>
         </div>
      </footer>
   </div>



   @RenderSection( "scripts", required: false )

   <script>
      $(function () {
         $("input[type=submit], button").button();
      });
   </script>

   <script type="text/javascript">
      $(function () {
         $("input[type=text]").first().focus();
      });
   </script>
</body>
</html>
