@model IList<HomeScrum.Web.Models.Sprints.AvailableWorkItemsViewModel>

@{
    ViewBag.Title = "Available Product Backlog";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm())
{
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor( model => model[0].WorkItemTypeName )
            </th>
            <th>
                @Html.DisplayNameFor( model => model[0].Name )
            </th>
            <th>
                @Html.DisplayNameFor( model => model[0].StatusName )
            </th>
            <th>
                @Html.DisplayNameFor( model => model[0].IsInTargetSprint )
            </th>

        </tr>

        @for (int i = 0; i < Model.Count(); i++)
        {
            @Html.HiddenFor(m=>m[i].TargetSprintRid)
            @Html.HiddenFor(m=>m[i].Id)
            <tr>
                <td>
                    @Html.DisplayFor( m => m[i].WorkItemTypeName )
                </td>
                <td>
                    @Html.DisplayFor( m => m[i].Name )
                </td>
                <td>
                    @Html.DisplayFor( m => m[i].StatusName )
                </td>
                <td>
                    @Html.EditorFor( m => m[i].IsInTargetSprint )
                </td>
            </tr>
        }
    </table>
    
    <p>
      <input type="submit" value="Save" />
   </p>
}
