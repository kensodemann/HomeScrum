@model HomeScrum.Web.Models.Admin.ProjectStatusEditorViewModel

@using (Html.BeginForm())
{
    @Html.ValidationSummary( true )

    @Html.Partial( "_DataObjectBaseEditor", Model )

    <fieldset>
        <legend>Properties</legend>

        <div class="formBooleanOption">
            @Html.EditorFor( model => model.IsActive )
            @Html.LabelFor( model => model.IsActive )
            @Html.ValidationMessageFor( model => model.IsActive )
        </div>

        <div class="formBooleanOption">
            @Html.EditorFor( model => model.AllowUse )
            @Html.LabelFor( model => model.AllowUse )
            @Html.ValidationMessageFor( model => model.AllowUse )
        </div>

        <p>
            <input type="submit" value="@ViewBag.EditorButtonLabel" />
        </p>
    </fieldset>
}